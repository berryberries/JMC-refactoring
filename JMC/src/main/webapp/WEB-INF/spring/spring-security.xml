<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security 
	http://www.springframework.org/schema/security/spring-security-5.3.xsd
	http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd">

   <bean class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder" id="bcryptPasswordEncoder"/>
   
   <security:http auto-config="true" use-expressions="true">
	   	<security:intercept-url pattern="/login/**" access="permitAll"/>
	   	<security:intercept-url pattern="/mypage/**" access="hasAuthority('user')"/>
	   	<security:intercept-url pattern="/board/**" access="hasAuthority('user')"/>
	   	<security:intercept-url pattern="/meeting/**" access="hasAuthority('user')"/>
	   	<security:intercept-url pattern="/chat/**" access="hasAuthority('user')"/>
		<security:intercept-url pattern="/admin/**/**" access="hasAuthority('admin')"/>

		<security:form-login
			 username-parameter="userId"
			 password-parameter="userPw"
			 login-processing-url="/login/main"
			 login-page="/login/login"
			 default-target-url="/**"/>
			 
		 <security:logout
			 logout-url="/login/logout"
			 logout-success-url="/login/main"
			 delete-cookies=""/>	 
			 
	   <security:csrf disabled="false"/>
   </security:http>
   
	
	<security:authentication-manager>
		<security:authentication-provider>
		    <security:user-service>
		      <security:user name="admin" password="admin" authorities="admin"/>
		      <security:user name="user" password="user" authorities="user"/>
		    </security:user-service>
		 </security:authentication-provider>
	</security:authentication-manager>
</beans>
